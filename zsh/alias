# rails
alias 'bx'='DISABLE_SPRING=1 bundle exec'
alias 'bxr'='bx rspec'
alias 'rs'='bx rails s'
alias 'rc'='bx rails c -- --noautocomplete'
alias 'rgen'='bx rails generate'
alias 'rcu'='ggl && DISABLE_SPRING=1 bundle install && bx rails db:migrate && bx rails data:migrate && yarn'
alias 'solargraph-setup'='gem install solargraph && yard gems && yard config --gem-install-yri'

# git
alias 'glp'='glol'
alias 'gdob'="git branch | grep -v "develop" | grep -v "master" | grep -v "main" | grep -v "staging" | xargs git branch -D; git fetch -p"
alias 'code'='NODE_OPTIONS="" code'
alias 'gu'="git shortlog | grep -E '^[^ ]'"

# tmux
alias 'tx'='tmux'
alias 'txa'='tmux attach-session -t'

# misc
alias '..'='cd ..'
alias 'brewup'='brew update && brew outdated'
alias 'cpzsh'='cp ~/.zshrc ~/.config/zsh/dotzshrc'
alias 'resetnvimplugins'='rm -rf ~/.local/share/nvim ~/.local/state/nvim ~/.cache/nvim'
alias 'touchzshrc'='cp ~/.config/zsh/dotzshrc ~/.zshrc'

# eza
alias 'ls'='eza -G'
alias 'lsl'='eza -1 -l -x'
alias 'lsa'='eza -a -1 -l -x'

# docker
alias 'dc'='docker-compose'
alias 'dcu'='dc up -d'
alias 'dcd'='dc down'
