// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 13.5,
  "format_on_save": "on",
  // "format_on_save": "off",
  "formatter": "language_server",
  "hard_tabs": false,
  "preferred_line_length": 100,
  "remove_trailing_whitespace_on_save": true,
  "show_copilot_suggestions": true,
  "show_whitespaces": "all",
  "soft_wrap": "none",
  "tab_size": 2,
  "theme": "Dracula",
  "vim_mode": true,
  "relative_line_numbers": true,
  "terminal": {
    "default_width": 1000,
    "dock": "bottom"
  },
  "wrap_guides": [
    100
  ],
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  "JavaScript": {
    "format_on_save": {
      "external": {
        "command": "prettier",
        "arguments": [
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  },
  "TypeScript": {
    "format_on_save": {
      "external": {
        "command": "prettier",
        "arguments": [
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  },
  "Markdown": {
    "format_on_save": {
      "external": {
        "command": "prettier",
        "arguments": [
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  },
  "TSX": {
    "format_on_save": {
      "external": {
        "command": "prettier",
        "arguments": [
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  },
  "CSS": {
    "format_on_save": {
      "external": {
        "command": "prettier",
        "arguments": [
          "--stdin-filepath",
          "{buffer_path}"
        ]
      }
    }
  },
  "Elixir": {
    "format_on_save": {
      "external": {
        "command": "mix",
        "arguments": [
          "format",
          "--stdin-filename",
          "{buffer_path}",
          "-"
        ]
      }
    }
  }
}
